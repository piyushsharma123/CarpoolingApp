<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#3B4242"
    tools:context=".signin_form">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/signup"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="30dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/as"
                android:text="Pick"
                android:textColor="#FF9800"
                android:textIsSelectable="false"
                android:textSize="50sp" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="129dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/as"
                android:text="App"
                android:textColor="#FFFFFF"
                android:textSize="50sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:text="Create Account"
            android:textColor="#1E2A40"
            android:textSize="24sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="574dp"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <EditText
                android:id="@+id/et_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_boxlayout"
                android:freezesText="false"
                android:hint="Name"
                android:padding="5dip"
                android:shadowColor="#ffffff"
                android:textColor="#000000"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/et_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/edittext_boxlayout"
                android:hint="E-mail Id"
                android:padding="5dip"
                android:shadowColor="#ffffff"
                android:textColor="#000000"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/et_teacherid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/edittext_boxlayout"
                android:hint="Teacher's id"
                android:padding="5dip"
                android:shadowColor="#ffffff"
                android:textColor="#000000"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/et_gender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/edittext_boxlayout"
                android:hint="Gender"
                android:padding="5dip"
                android:shadowColor="#ffffff"
                android:textColor="#000000"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/et_designation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/edittext_boxlayout"
                android:hint="Designation"
                android:padding="5dip"
                android:shadowColor="#ffffff"
                android:textColor="#000000"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/et_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/edittext_boxlayout"
                android:hint="Address"
                android:padding="5dip"
                android:shadowColor="#ffffff"
                android:textColor="#000000"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/et_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/edittext_boxlayout"
                android:hint="Phone No."
                android:padding="5dip"
                android:phoneNumber="true"
                android:shadowColor="#ffffff"
                android:textColor="#000000"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/et_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/edittext_boxlayout"
                android:hint="Password"
                android:padding="5dip"
                android:password="true"
                android:shadowColor="#ffffff"
                android:textColor="#000000"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/et_retype"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/edittext_boxlayout"
                android:hint="Re-Type Password"
                android:padding="5dip"
                android:password="true"
                android:shadowColor="#ffffff"
                android:textColor="#000000"
                android:textSize="20sp" />

            <Spinner
                android:id="@+id/register_role_spinner"
                android:layout_width="match_parent"
                android:layout_height="39dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/edittext_boxlayout"
                android:dropDownWidth="wrap_content"
                android:popupBackground="@drawable/edittext_boxlayout"
                android:spinnerMode="dialog" />

        </LinearLayout>

        <Button
            android:id="@+id/signin"
            android:layout_width="256dp"
            android:layout_height="47dp"
            android:layout_gravity="center_horizontal"
            android:layout_margin="60dp"
            android:background="@android:color/holo_orange_dark"
            android:text="Sign In"
            android:textColor="#ffffff"></Button>
    </LinearLayout>


</ScrollView>