<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_google_signin_btn_text_dark_default"
    tools:context=".role_home">

        <LinearLayout
            android:id="@+id/linearLayout4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="117dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="30dp"
                android:background="@drawable/login"
                android:orientation="horizontal"
                android:paddingTop="25dp">

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="198dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/as"
                    android:gravity="right"
                    android:text="Pick"
                    android:textColor="#FF9800"
                    android:textIsSelectable="false"
                    android:textSize="50sp" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="193dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/as"
                    android:text="App"
                    android:textColor="#FFFFFF"
                    android:textSize="50sp" />

            </LinearLayout>

            <TextView
                android:id="@+id/msg1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="0dp"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="50dp"
                android:text="Hello there!"
                android:textColor="#000000"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/msg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="0dp"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="0dp"
                android:text="Who are you this time"
                android:textColor="#000000"
                android:textStyle="italic" />

            <Button
                android:id="@+id/role_driver"
                android:layout_width="217dp"
                android:layout_height="47dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="40dp"
                android:background="@drawable/blue_round"
                android:text="I'am a Driver"
                android:textColor="#ffffff" />

            <Button
                android:id="@+id/role_passenger"
                android:layout_width="223dp"
                android:layout_height="47dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="40dp"
                android:background="@drawable/blue_round"
                android:text="I'am a Passenger"
                android:textColor="#ffffff" />


        </LinearLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/windowBackground"
        app:itemBackground="@color/blueDark"
        app:itemIconTint="@android:color/white"
        app:itemTextColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:menu="@menu/navigation" />

</androidx.constraintlayout.widget.ConstraintLayout>

